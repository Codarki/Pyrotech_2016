<?xml version="1.0" ?>
<parameters>
	<parameter
		label = "Diffuse map 1"
		name = "diffuse_map1"
		type = "texture2D"
		hlsl = "diffuse_texture1"
		default_value = "data/images/common/white.tga">
	</parameter>
	<parameter
		label = "Diffuse map 2"
		name = "diffuse_map2"
		type = "texture2D"
		hlsl = "diffuse_texture2"
		default_value = "data/images/common/white.tga">
	</parameter>
	<parameter
		label = "Specular map 1"
		name = "specular_map1"
		type = "texture2D"
		hlsl = "specular_texture1"
		default_value = "data/images/common/white.tga">
	</parameter>
	<parameter
		label = "Specular map 2"
		name = "specular_map2"
		type = "texture2D"
		hlsl = "specular_texture2"
		default_value = "data/images/common/white.tga">
	</parameter>
	<parameter
		label = "Normal map 1"
		name = "normal_map1"
		type = "texture2D"
		hlsl = "normal_texture1"
		default_value = "data/images/common/normal.tga">
	</parameter>
	<parameter
		label = "Normal map 2"
		name = "normal_map2"
		type = "texture2D"
		hlsl = "normal_texture2"
		default_value = "data/images/common/normal.tga">
	</parameter>
	
	<parameter
		label = "Occlusion map"
		name = "occlusion_map"
		type = "texture2D"
		hlsl = "occlusion_texture"
		default_value = "data/images/common/white.tga">
	</parameter>
	
	<parameter
		label = "Emission map 1"
		name = "emission_map1"
		type = "texture2D"
		hlsl = "emission_texture1"
		default_value = "data/images/common/black.tga">
	</parameter>
	<parameter
		label = "Emission map 2"
		name = "emission_map2"
		type = "texture2D"
		hlsl = "emission_texture2"
		default_value = "data/images/common/black.tga">
	</parameter>

	
	<parameter
		label = "Reflection map 1"
		name = "reflection_map1"
		type = "texture2D"
		hlsl = "reflection_texture1"
		default_value = "data/images/common/black.tga">
	</parameter>
	<parameter
		label = "Reflection map 2"
		name = "reflection_map2"
		type = "texture2D"
		hlsl = "reflection_texture2"
		default_value = "data/images/common/black.tga">
	</parameter>
	
	<parameter
		label = "Ambient color"
		name = "ambient_color"
		type = "float3"
		hlsl = "ambient"
		default_value = "0 0 0">
	</parameter>
	<parameter
		label = "Diffuse color 1"
		name = "diffuse_color1"
		type = "float3"
		hlsl = "diffuse1"
		default_value = "1.0 1.0 1.0">
	</parameter>
	<parameter
		label = "Diffuse color 2"
		name = "diffuse_color2"
		type = "float3"
		hlsl = "diffuse2"
		default_value = "1.0 1.0 1.0">
	</parameter>
	<parameter
		label = "Specular color 1"
		name = "specular_color1"
		type = "float3"
		hlsl = "specular1"
		default_value = "1.0 1.0 1.0">
	</parameter>
	<parameter
		label = "Specular color 2"
		name = "specular_color2"
		type = "float3"
		hlsl = "specular2"
		default_value = "1.0 1.0 1.0">
	</parameter>
	<parameter
		label = "Roughness"
		name = "roughness"
		type = "float"
		hlsl = "roughness_uniform"
		default_value = "0.4">
	</parameter>
	<parameter
		label = "Diffuse roughness"
		name = "diffuse_roughness"
		type = "float"
		hlsl = "diffuse_roughness_uniform"
		default_value = "0.3">
	</parameter>
	<parameter
		label = "Fresnel reflectance as measured at normal incidence"
		name = "fresnel_normal_incidence"
		type = "float"
		hlsl = "fresnel_normal_incidence"
		default_value = "0.25">
	</parameter>
	<parameter
		label = "Normal scale 1"
		name = "normal_scale1"
		type = "float"
		hlsl = "normal_scale1"
		default_value = "1.0">
	</parameter>
	<parameter
		label = "Normal scale 2"
		name = "normal_scale2"
		type = "float"
		hlsl = "normal_scale2"
		default_value = "1.0">
	</parameter>
	<parameter
		label = "Reflection coeff"
		name = "reflection_coeff"
		type = "float"
		hlsl = "reflection_coeff"
		default_value = "1.0">
	</parameter>
	<parameter
		label = "Emission Coeffient 1"
		name = "emission_coeff1"
		type = "float3"
		hlsl = "emission_coeff1"
		default_value = "1 1 1">
	</parameter>
	<parameter
		label = "Emission Coeffient 2"
		name = "emission_coeff2"
		type = "float3"
		hlsl = "emission_coeff2"
		default_value = "1 1 1">
	</parameter>
	<parameter
		label = "General Texcoord Offset"
		name = "general_texcoord_offset"
		type = "float3"
		hlsl = "general_texcoord_offset"
		default_value = "0 0 0">
	</parameter>
	<parameter
		label = "Color Texcoord Offset"
		name = "color_texcoord_offset"
		type = "float3"
		hlsl = "color_texcoord_offset"
		default_value = "0 0 0">
	</parameter>
	<parameter
		label = "Emission Texcoord Offset"
		name = "emission_texcoord_offset"
		type = "float3"
		hlsl = "emission_texcoord_offset"
		default_value = "0 0 0">
	</parameter>
</parameters>

<sampler_states>
	<sampler
		name = "diffuse_sampler1"
		texture = "diffuse_texture1"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "ANISOTROPIC"
		mag_filter = "ANISOTROPIC"
		mip_filter = "ANISOTROPIC"
		>
	</sampler>
	<sampler
		name = "diffuse_sampler2"
		texture = "diffuse_texture2"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "ANISOTROPIC"
		mag_filter = "ANISOTROPIC"
		mip_filter = "ANISOTROPIC"
		>
	</sampler>
	<sampler
		name = "specular_sampler1"
		texture = "specular_texture1"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "ANISOTROPIC"
		mag_filter = "ANISOTROPIC"
		mip_filter = "ANISOTROPIC"
		>
	</sampler>
	<sampler
		name = "specular_sampler2"
		texture = "specular_texture2"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "ANISOTROPIC"
		mag_filter = "ANISOTROPIC"
		mip_filter = "ANISOTROPIC"
		>
	</sampler>
	<sampler
		name = "normal_sampler1"
		texture = "normal_texture1"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "ANISOTROPIC"
		mag_filter = "ANISOTROPIC"
		mip_filter = "ANISOTROPIC"
		>
	</sampler>
	<sampler
		name = "normal_sampler2"
		texture = "normal_texture2"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "ANISOTROPIC"
		mag_filter = "ANISOTROPIC"
		mip_filter = "ANISOTROPIC"
		>
	</sampler>
	<sampler
		name = "occlusion_sampler"
		texture = "occlusion_texture"
		address_u = "CLAMP"
		address_v = "CLAMP"
		address_w = "CLAMP"
		min_filter = "LINEAR"
		mag_filter = "LINEAR"
		mip_filter = "LINEAR"
		>
	</sampler>
	<sampler
		name = "emission_sampler1"
		texture = "emission_texture1"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "LINEAR"
		mag_filter = "LINEAR"
		mip_filter = "LINEAR"
		>
	</sampler>
	<sampler
		name = "emission_sampler2"
		texture = "emission_texture2"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "LINEAR"
		mag_filter = "LINEAR"
		mip_filter = "LINEAR"
		>
	</sampler>
	<sampler
		name = "reflection_sampler1"
		texture = "reflection_texture1"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "LINEAR"
		mag_filter = "LINEAR"
		mip_filter = "LINEAR"
		>
	</sampler>
	<sampler
		name = "reflection_sampler2"
		texture = "reflection_texture2"
		address_u = "WRAP"
		address_v = "WRAP"
		address_w = "WRAP"
		min_filter = "LINEAR"
		mag_filter = "LINEAR"
		mip_filter = "LINEAR"
		>
	</sampler>
</sampler_states>

<streams>
	<stream0
		position = 0
		tangent = 0
		normal = 0
		texcoord = 0>
	</stream0>
</streams>

<vertex_shader
	stream = "stream0">
	<include_hlsl file = "data/shaders/hlsl/common_vs.hlsl"/>
	<include_hlsl file = "data/shaders/hlsl/tbn_vs_ws_blended.hlsl"/>
</vertex_shader>

<pixel_shader>
	<include_hlsl file = "data/shaders/hlsl/common_ps.hlsl"/>
	<include_hlsl file = "data/shaders/hlsl/cook_torrance_ws_blended.hlsl"/>
</pixel_shader>
