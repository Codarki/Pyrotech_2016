<?xml version="1.0" ?>

<sequences>
	<scene_sequence
	    name = "planttunnel"
		scene = "data/scenes/planttunnel.p3d_scene" 
		camera = "Camera01"		
		frames_per_second = 30 
		start_time = "0.0"
		start_frame = "0"
		end_frame = "3000" 
        near_plane = "2"
        far_plane = "1000"
        ssao_enabled = "false">	
		</scene_sequence>

	
	<!-- Pitää olla jotta noise toimii, ei ole päällä mutta vaaditaan tämä rivi -->
	<image name = "noise_tex" path = "data/images/noise.jpg" />
    <image name = "ShadowDepthMap" path = "ShadowTexture" />


	<draw_image name = "draw_spot_depth">
		<input sequence = "ShadowDepthMap" />
		<size v = "0.4 0.4"/>
        <center v = "0.8 0.2"/>
        <intensity>0.8</intensity>
	</draw_image>	
		<!-- Post processing päällä -->	
	<!-- Tähän ei tarvitse koskea -->
	<post_processing name = "Post processing">
		<clear_color v = "0 0 0"/>
		<input sequence = "planttunnel" time="0"/>			
		<!-- input sequence ="draw_alkuspace"/ -->	

	</post_processing>
	
	<!-- Depth buffer päällä -->
	<!-- Tähän ei tarvitse koskea -->
	<depth_buffer name = "Depth test">
        <clear_color v = "0 0 0"/>
		<input sequence = "Post processing"/>
	</depth_buffer>

	<!--  Linkataan Depth test sequence -->
	<!--  Ei tarttis koskee -->
	<composition name = "main timeline">	
		<input sequence = "Depth test"/>
        <!--<input sequence = "draw_spot_depth"/> -->
        
	</composition>

	<!-- Main timeline -->
	<!--  Ei tarttis koskee -->		
	<timeline>
		<input sequence = "main timeline"/>
	</timeline>
</sequences>